<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FEFDFF">

    <TextView
        android:id="@+id/textViewAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flashcard Editor"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#30292F"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150dp"/>

    <EditText
        android:id="@+id/editTextContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Termin"
        android:textColorHint="@color/black"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:maxLines="10"
        android:textColor="@color/black"
        android:backgroundTint="#30292F"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextDefinition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Definition"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:minLines="5"
        android:maxLines="10"
        android:backgroundTint="#30292F"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <ImageButton
            android:id="@+id/btnBold"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/bold"
            android:contentDescription="Bold"
            android:backgroundTint="#5F5AA2"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="50dp"/>

        <ImageButton
            android:id="@+id/btnItalic"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="#5F5AA2"
            android:padding="8dp"
            android:contentDescription="Italic"
            android:scaleType="centerInside"
            android:src="@drawable/italic"
            android:layout_marginRight="10dp"/>

        <ImageButton
            android:id="@+id/btnUnderline"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="#5F5AA2"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/underline"
            android:contentDescription="Underline"
            android:layout_marginRight="10dp"/>

        <ImageButton
            android:id="@+id/btnTextColor"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="#5F5AA2"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/colorchange"
            android:contentDescription="TextColor"
            android:layout_marginRight="10dp"/>

        <ImageButton
            android:id="@+id/btnAddImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="#5F5AA2"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/addimage"
            android:contentDescription="AddImage" />

    </LinearLayout>
    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textColor="@android:color/white"
        android:backgroundTint="#5F5AA2"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp" />
</LinearLayout>
